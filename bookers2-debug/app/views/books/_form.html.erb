<%= form_with model:@book, local:true do |f| %>
  <div class="field row">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field row">
    <%= f.label :opinion %>
    <%= f.text_area :body %>
  </div>

  <div class="actions row">
    <%= f.submit "Create Book" %>
  </div>
<% end %>
